{
  "manifest_version": 3,
  "name": "Article Ally",
  "description": "A Chrome extension that reads the article you're viewing and asks comprehension questions.",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "identity"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "host_permissions": [
    "http://*/",
    "https://*/"
  ]
}
