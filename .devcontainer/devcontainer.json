{
  "name": "Read-Robin Go Development Environment",
  "dockerFile": "../Dockerfile",
  "context": "..",
  "appPort": [ "8080:8080" ],
  "workspaceFolder": "/workspace",
  "settings": {
      "go.gopath": "/go",
      "go.toolsGopath": "/go"
  },
  "extensions": [
    "golang.go",
    "premparihar.gotestexplorer"
  ],
  "postCreateCommand": "go mod tidy",
  "runArgs": [
      "--init",
      "--cap-add=SYS_PTRACE",
      "--security-opt",
      "seccomp=unconfined"
  ],
  "remoteUser": "root",
  "containerEnv": {
      "PORT": "8080"
  }
}
